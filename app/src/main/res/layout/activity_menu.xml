<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgd_welcome"
    tools:context=".MenuActivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/btn_crudProducts"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="#66121111"
        android:text="@string/crudProducts"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMesaSeleccionada"
        app:layout_constraintVertical_bias="0.556"
        app:strokeColor="#050505"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="#66121111"
        android:text="@string/welcomeUser"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_seleccionar"
        app:layout_constraintVertical_bias="0.075"
        app:strokeColor="#050505"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btn_seleccionar"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:backgroundTint="#80121111"
        android:text="@string/btn_seleccionar"
        android:textSize="30sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_crudProducts"
        app:strokeColor="#050505"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/txtMesaSeleccionada"
        android:layout_width="460dp"
        android:layout_height="54dp"
        android:layout_marginTop="84dp"
        android:textAlignment="center"
        android:textColor="#FAF6F6"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />


</androidx.constraintlayout.widget.ConstraintLayout>